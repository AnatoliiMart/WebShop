@model IEnumerable<WebShop.Models.ViewModels.Account.OrdersForUserVM>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

@if (!Model.Any())
{
    <h2 class="text-center">You have no orders </h2>
}
else
{
    <table class="table">
        <tr>
            <th>
               Order details
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>

            <th></th>
        </tr>
        
        @foreach (var item in Model)
        {
              <tr>
                  <td>
                      @foreach (var item1 in item.ProductsAndQty)
                      {
                          @item1.Key @:x @item1.Value <br />
                      }
                  </td>
                  <td>
                      @Html.DisplayFor(modelItem => item.OrderDate)
                  </td>
                  <td>
                      @Html.DisplayFor(modelItem => item.Total) UAN
                  </td>
              </tr>
        }
    </table>
}
