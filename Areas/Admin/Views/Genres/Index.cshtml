@model IEnumerable<WebShop.Models.ViewModels.Books.GenreVM>

@{
    ViewBag.Title = "Genres";
}

<h2>Genres</h2>

@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}

<p>
    @Html.ActionLink("Add genre", "AddGenre", "", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GenreName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
            <td style="width: 100px;">
                @Html.ActionLink("Edit", "EditGenre", new { id = item.Id }, new { @class = "btn btn-primary" })
            </td>

            <td style="width: 120px;">
                @Html.ActionLink("Details", "GenreDetails", new { id = item.Id }, new { @class = "btn btn-success" })
            </td>

            <td style="width: 100px;">
                @Html.ActionLink("Delete", "DeleteGenre", new { id = item.Id }, new { @class = "btn btn-danger delete" })
            </td>
        </tr>
    }

</table>

@section Scripts
{
    <script src="~/Content/ShopJS/ProductsSctiprJS.js"></script>
}

