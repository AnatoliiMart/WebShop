@model WebShop.Models.ViewModels.Books.PressVM

@{
    ViewBag.Title = "AddPress";
}

<h2>AddPress</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.PressName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PressName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PressName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-top: 15px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add press" class="btn btn-success" />
            </div>
        </div>
        <div class="form-group" style="margin-top: 15px;">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Back to presses", "Index", "", new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}

